<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         updateCheck="false" monitoring="autodetect" dynamicConfig="true">

    <diskStore path="/config/cache"/>



    <defaultCache eternal="true" maxElementsInMemory="5000000"
                  overflowToDisk="true" diskPersistent="false" 
                   memoryStoreEvictionPolicy="LRU" />

    <cache
            name="ready"
            maxElementsInMemory="5000000"
            eternal="true"
            diskPersistent="true"
            overflowToDisk="true"
            memoryStoreEvictionPolicy="LRU">
        <cacheEventListenerFactory class="com.sqmusicplus.config.ReadyCacheEventListener" />
    </cache>
    <cache
            name="run"
            maxElementsInMemory="5000000"
            eternal="true"
            diskPersistent="true"
            overflowToDisk="true"
            memoryStoreEvictionPolicy="LRU">
        <cacheEventListenerFactory class="com.sqmusicplus.config.RunCacheEventListener" />
    </cache>
    <cache
            name="over"
            maxElementsInMemory="5000000"
            eternal="true"
            diskPersistent="true"
            overflowToDisk="true"
            memoryStoreEvictionPolicy="LRU">
    </cache>
    <cache
            name="error"
            maxElementsInMemory="5000000"
            eternal="true"
            diskPersistent="true"
            overflowToDisk="true"
            memoryStoreEvictionPolicy="LRU">
    </cache>



</ehcache>